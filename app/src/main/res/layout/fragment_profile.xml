<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:background="@color/colorAccent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/content_layout_bg"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="173dp"
                android:layout_height="149dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_avatar"
                tools:srcCompat="@drawable/default_avatar"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt1"
                android:textColor="@color/accent_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/data_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtNameProf"
                android:textColor="@color/accent_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"

                android:text="@string/data_username"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtUsernameProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_email"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtEmailProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt7"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_weight"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtWeight"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
        android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_phoneNo"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtPhoneProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />

        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/CatW"
            android:layout_width="match_parent"
            android:textColor="@color/accent_2"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Current Goals"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_steps"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtStepsProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_distance"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtDistanceProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/drivingDistance"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_ddistance"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtDrivingDistanceProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/cyclingDistance"
                android:layout_width="wrap_content"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:text="@string/data_cdistance"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txtCyclingDistanceProf"
                android:layout_width="match_parent"
                android:textColor="@color/accent_2"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textDirection="rtl" />

        </LinearLayout>

    </LinearLayout>


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/profileFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:fab_labelStyle="@style/custom_fab"
            app:fab_addButtonColorNormal="@color/floatBtn"
            app:fab_addButtonColorPressed="@color/floatBtnPressed"
            >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/deleteProfileFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_colorNormal="@color/btnDelRed"
                app:fab_icon="@android:drawable/ic_menu_delete"
                app:fab_title="Delete Profile"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/editProfileFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_colorNormal="@color/btnEdit"
                app:fab_icon="@android:drawable/ic_menu_edit"

                app:fab_title="Edit Profile"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>